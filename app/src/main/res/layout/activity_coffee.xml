<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kafa"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:layout_marginTop="55dp"/>

    <!-- Cappuccino Item -->
    <LinearLayout
        android:id="@+id/itemCappuccino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageCappuccino"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cappuccino" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameCappuccino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cappuccino"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueCappuccino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="130 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusCappuccino"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterCappuccino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusCappuccino"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Espresso Item -->
    <LinearLayout
        android:id="@+id/itemEspresso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemCappuccino"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageEspresso"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/espresso" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameEspresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espresso"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueEspresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusEspresso"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterEspresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusEspresso"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Domaca Item -->
    <LinearLayout
        android:id="@+id/itemDomaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemEspresso"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageDomaca"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/domaca" /> <!-- Replace with Domaca image -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameDomaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domaca"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueDomaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="140 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusDomaca"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterDomaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusDomaca"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Caj Item -->
    <LinearLayout
        android:id="@+id/itemCaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemDomaca"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageCaj"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/caj" /> <!-- Replace with Caj image -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameCaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caj"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueCaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusCaj"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterCaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusCaj"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <!-- Bottom buttons section -->
        <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#F5F5F5"
            android:elevation="4dp">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Potvrdi"
                android:background="@android:color/holo_red_light"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
