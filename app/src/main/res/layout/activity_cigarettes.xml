<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cigare"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:layout_marginTop="55dp"/>

    <!-- Winston Item -->
    <LinearLayout
        android:id="@+id/itemWinston"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageWinston"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/winston" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameWinston"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winston"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueWinston"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusWinston"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterWinston"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusWinston"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Malboro Item -->
    <LinearLayout
        android:id="@+id/itemMalboro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemWinston"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageMalboro"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/malboro" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameMalboro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malboro"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueMalboro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusMalboro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterMalboro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusMalboro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- LM Item -->
    <LinearLayout
        android:id="@+id/itemLM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemMalboro"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageLM"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/lm" /> <!-- Replace with LM image -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameLM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LM"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueLM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="280 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusLM"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterLM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusLM"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sobranie Item -->
    <LinearLayout
        android:id="@+id/itemSobranie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemLM"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageSobranie"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sobranie" /> <!-- Replace with Sobranie image -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameSobranie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobranie"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueSobranie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusSobranie"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterSobranie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusSobranie"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <!-- Bottom buttons section -->
        <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#F5F5F5"
            android:elevation="4dp">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Potvrdi"
                android:background="@android:color/holo_red_light"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
