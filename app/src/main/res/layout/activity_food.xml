<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hrana"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:layout_marginTop="55dp"/>

    <!-- Chipsy Item -->
    <LinearLayout
        android:id="@+id/itemChipsy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageChipsy"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/chipsy" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameChipsy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chipsy"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueChipsy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusChipsy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterChipsy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusChipsy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Smoki Item -->
    <LinearLayout
        android:id="@+id/itemSmoki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemChipsy"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageSmoki"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/smoki" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameSmoki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smoki"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueSmoki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="130 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusSmoki"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterSmoki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusSmoki"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Twix Item -->
    <LinearLayout
        android:id="@+id/itemTwix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemSmoki"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageTwix"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/twix" /> <!-- Replace with Twix image -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameTwix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twix"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueTwix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusTwix"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterTwix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusTwix"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Kikiriki Item -->
    <LinearLayout
        android:id="@+id/itemKikiriki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemTwix"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageKikiriki"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/kikiriki" /> <!-- Replace with Kikiriki image -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameKikiriki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kikiriki"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueKikiriki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusKikiriki"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterKikiriki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusKikiriki"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <!-- Bottom buttons section -->
        <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#F5F5F5"
            android:elevation="4dp">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Potvrdi"
                android:background="@android:color/holo_red_light"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
