<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/bottomButtons"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Large ImageButton at the top -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/imgPromo"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/combo_one"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <!-- First row of smaller ImageButtons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageButton
                        android:id="@+id/imgSnacks"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/snacks"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Hrana"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <ImageButton
                        android:id="@+id/imgDrinks"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/soda"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Pice"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Second row of smaller ImageButtons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageButton
                        android:id="@+id/imgCigarettes"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/cigarettes"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Cigare"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <ImageButton
                        android:id="@+id/imgCarWash"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/carwash"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Pranje Vozila"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4dp" />
                </LinearLayout>


            </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:orientation="vertical"
                     android:gravity="center"
                     android:layout_marginStart="8dp">

                     <ImageButton
                         android:id="@+id/imgCoffee"
                         android:layout_width="match_parent"
                         android:layout_height="150dp"
                         android:src="@drawable/coffee"
                         android:background="?android:attr/selectableItemBackground"
                         android:scaleType="fitCenter" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:text="Kafe"
                         android:textSize="16sp"
                         android:textColor="@android:color/black"
                         android:layout_marginTop="4dp" />
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:orientation="vertical"
                     android:gravity="center"
                     android:layout_marginStart="8dp">

                     <ImageButton
                         android:id="@+id/imgCarCare"
                         android:layout_width="match_parent"
                         android:layout_height="150dp"
                         android:src="@drawable/oil"
                         android:background="?android:attr/selectableItemBackground"
                         android:scaleType="fitCenter" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:text="Sve za automobil"
                         android:textSize="16sp"
                         android:textColor="@android:color/black"
                         android:layout_marginTop="4dp" />
                 </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom buttons anchored to the bottom -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nazad"
            android:background="@android:color/darker_gray"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Dalje"
            android:background="@android:color/holo_blue_light"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
