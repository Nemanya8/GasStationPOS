<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VaÅ¡a korpa"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:layout_marginTop="55dp"/>

    <!-- CocaCola Item -->
    <LinearLayout
        android:id="@+id/itemCocaCola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageCocaCola"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cocacola" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameCocaCola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CocaCola"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueCocaCola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="130 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusCocaCola"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterCocaCola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusCocaCola"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- RedBull Item -->
    <LinearLayout
        android:id="@+id/itemRedBull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemCocaCola"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageRedBull"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/redbull" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameRedBull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RedBull"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueRedBull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusRedBull"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterRedBull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusRedBull"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Pepsi Item -->
    <LinearLayout
        android:id="@+id/itemPepsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemRedBull"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImagePepsi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pepsi" /> <!-- Replace with Pepsi image -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNamePepsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pepsi"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValuePepsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="140 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusPepsi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterPepsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusPepsi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sprite Item -->
    <LinearLayout
        android:id="@+id/itemSprite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_below="@id/itemPepsi"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/itemImageSprite"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sprite" /> <!-- Replace with Sprite image -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameSprite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sprite"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/itemValueSprite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 rsd"
                android:textSize="14sp"
                android:textColor="#888" />

        </LinearLayout>

        <!-- Image Buttons for + and - -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Minus Button -->
            <ImageButton
                android:id="@+id/btnMinusSprite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <!-- Quantity Counter -->
            <TextView
                android:id="@+id/quantityCounterSprite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <!-- Plus Button -->
            <ImageButton
                android:id="@+id/btnPlusSprite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <!-- Bottom buttons section -->
        <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#F5F5F5"
            android:elevation="4dp">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Potvrdi"
                android:background="@android:color/holo_red_light"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
